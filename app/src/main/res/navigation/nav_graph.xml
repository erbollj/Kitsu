<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFlowFragment"
    tools:ignore="InvalidNavigation">

    <fragment
        android:id="@+id/mainFlowFragment"
        android:name="com.example.kitsuapi.presentation.ui.fragment.main.MainFlowFragment"
        android:label="fragment_main_flow"
        tools:layout="@layout/fragment_main_flow" />
    <fragment
        android:id="@+id/loginFlowFragment"
        android:name="com.example.kitsuapi.presentation.ui.fragment.login.LoginFlowFragment"
        android:label="fragment_login_flow"
        tools:layout="@layout/fragment_login_flow" />

    <action
        android:id="@+id/action_global_loginFlowFragment"
        app:destination="@id/loginFlowFragment" />

    <action
        android:id="@+id/action_global_mainFlowFragment"
        app:destination="@id/mainFlowFragment" />

</navigation>